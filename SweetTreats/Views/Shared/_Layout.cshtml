<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Factory Management App</title>
    <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/4.5.1/css/bootstrap.min.css'>
    <link rel="stylesheet" href="~/css/bootstrap:minty.css">
    <link rel="stylesheet" href="~/css/styles.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
  <a class="navbar-brand" href="/">SweetTreats</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarColor01">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item">
        <a class="nav-link" href="/treats">Treats</a>
      </li>
       <li class="nav-item">
        <a class="nav-link" href="/treats/create">Add Treat </a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/flavors">Flavors</a>
      </li>
       <li class="nav-item">
        <a class="nav-link" href="/flavors/create">Add Flavor</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/account">Register</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/account/login">Log-in</a>
      </li>
      <li class="nav-item">
        @using (Html.BeginForm("LogOff", "Account"))
        {
        <input type="submit" class="btn" value="Log out" />
        }
      </li>
  @if (User.Identity.IsAuthenticated)
  {
    <li class="nav-item">
        <span class="navbar-text">Hello @User.Identity.Name!</span>
    </li>
    <li class="nav-item">
        <a class="nav-link" asp-area="MicrosoftIdentity" asp-controller="AccountController" asp-action="LogOff">Log Off</a>
    </li>
  }
</ul>
  </div>
</nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - SweetTreats - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

   
</body>
</html>
